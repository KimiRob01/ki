<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_camera_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/command_button_layout_margin"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btn_auto_focus"
            android:layout_width="@dimen/command_button_size"
            android:layout_height="@dimen/command_button_size"
            android:layout_margin="@dimen/command_button_margin"
            android:background="@drawable/button_focus" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="@dimen/command_button_size"
            android:layout_height="@dimen/command_button_size"
            android:layout_margin="@dimen/command_button_margin"
            android:background="@drawable/button_snap" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="@dimen/controller_size"
        android:layout_height="@dimen/controller_size"
        android:background="@drawable/image_button_bg"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>

